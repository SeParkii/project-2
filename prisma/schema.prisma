generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model tickets {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId

  concertName   String?
  artist        String?
  venue         String?
  city          String?

  concertDate   DateTime? @db.Date
  startTime     String?

  ticketType    String?
  price         Float?
  seatInfo      String?
  orderNumber   String?

  platform      String?

  isAttended    Boolean?
  isWithFriends Boolean?

  hypeLevel     Int?
  notes         String?
}

